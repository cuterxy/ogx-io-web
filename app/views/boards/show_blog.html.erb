<% content_for :title do %>
  <%= @board.name %>
<% end %>

<% content_for :left_side do %>
  <%= render 'users/profile_left' %>
<% end %>

<div class="col-md-10 right-side-layout">
  <div class="board-main">
    <div class="board-head clearfix">
      <h2 class="no-margin pull-left"><%= @board.name %></h2>
      <% if @board.creator == current_user %>
        <div class="post-button pull-right">
          <%= link_to new_board_post_path(@board) do %><button type="button" class="btn btn-success btn-sm"><%= t('boards.action.post_button') %></button><% end %>
        </div>
      <% end %>
    </div>
    <div class="blog-intro">
      <div class="intro-content">
        <%= @board.intro %>
      </div>
    </div>
    <div class="board-content">
      <div class="blog-container">
        <%= render partial: "posts/blog_post_list_item", as: :post, collection: @posts %>
      </div>
    </div>
    <div class="board-pagination">
      <%= paginate @posts, left: 1, right: 1, :theme => 'bootstrap3' %>
    </div>
  </div>
</div>

